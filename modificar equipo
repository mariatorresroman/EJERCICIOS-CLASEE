//corre solo una vez cuando inicia el programa
function setup(){
    createCanvas(400,400);
    
    

}

//corre continuamente después de la función setup
function draw(){
    background('pink')
   if(mouseIsPressed) {
    fill (random(0,200), random(0,200), random(0,200));
    ellipse(mouseX,mouseY,sin(millis()/1000)*50+50);
   }
}

